<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bjbj6.glitchinvadors.Stage"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <com.example.bjbj6.glitchinvadors.StageView
        android:id="@+id/stageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/move_stick"
            android:alpha="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:onClick="setLaser"
            android:alpha="0.3"
            android:src="@drawable/l_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintVertical_chainStyle="spread"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.60" />

        <ImageView
            android:onClick="setShotgun"
            android:alpha="0.3"
            android:src="@drawable/s_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            app:layout_constraintLeft_toRightOf="@+id/imageView5"
            android:layout_marginStart="-12dp"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp" />

        <ImageView
            android:onClick="setRocket"
            android:alpha="0.3"
            android:src="@drawable/r_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="0dp" />


    </android.support.constraint.ConstraintLayout>


</FrameLayout>
